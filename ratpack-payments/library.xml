<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.14.6.xsd">

    <jdbc>
        <driver>com.mysql.cj.jdbc.Driver</driver>
        <url>jdbc:mysql://127.0.0.1:3306/payments</url>
        <user>root</user>
        <password>pass</password>
    </jdbc>

    <!-- Generator parameters -->
    <generator>
        <database>
            <name>org.jooq.meta.mysql.MySQLDatabase</name>
            <includes>.*</includes>
            <inputSchema>payments</inputSchema>
        </database>
        <target>
            <packageName>com.bogdan.jooq</packageName>
            <directory>target/generated-sources/jooq</directory>
        </target>
    </generator>
</configuration>